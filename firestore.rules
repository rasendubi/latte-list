rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, write: if request.auth.uid == uid;

      match /items/{item} {
        allow read, write: if request.auth.uid == uid;

        match /item_audit/{audit} {
          allow create: if request.auth.uid == uid;
        }
      }
    }
  }
}
