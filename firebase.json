{
  "hosting": {
    "site": "latte-list",
    "predeploy": "npm run build:client && rm -rf ./out/*.map",
    "public": "out",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": ".",
    "runtime": "nodejs14",
    "predeploy": "npm run build:server",
    "ignore": [
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "/out/",
      "/.next/",
      "/src/",
      "/pages/",
      "/public/"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "ui": {
      "enabled": true
    },
    "functions": {
      "port": 5001
    },
    "auth": {
      "port": 9099
    }
  }
}
